          <h2>{{menu_main.title}} </h2>
          <p>{{menu_main.author}} </p>
        </div>
      </div>
      {% endfor %}
  </div>
  </div>

  


</article>

<section class="modal ">
    <div class="overlay"></div>
      <div class="container">
        <div class="img_food">
