{% block title_receitas %}
<title>Receitas</title>
{% endblock %}

{% block content_receitas %}

<div class="overlay_relative">
<article class="mais_acessadas" id="receitas">
  <div class="container">
    <h2>Mais acessados</h2>
 
    <div class="menu">
      {% for  menu_main in menu_single2 %}
      <div class="menu_single" id= "{{menu_main.id}} ">
        <img src=" {{menu_main.img_food}} " alt="assinhas" />
